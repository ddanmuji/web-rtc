{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["es6"],
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"sourceMap": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}

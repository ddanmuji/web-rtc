doctype html
html(lang="ko")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Simple Meet
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
  body
    header
      h1 Simple Meet
    main
      div#welcome
        form
          input(placeholder="room name", required, type="Text", value="test_room")
          button Enter room
      div#call
        div#myStream
          video#myFace(autoplay, playsinline, muted, width="400", height="400")
          button#mute Mute
          button#camera Turn Camera Off
          select#cameras
    script(src="https://cdn.socket.io/4.6.0/socket.io.min.js", integrity="sha384-c79GN5VsunZvi+Q/WObgk2in0CbZsHnjEqvFxC5DxHn9lTfNce2WW6h2pH6u/kF+", crossorigin="anonymous")
    script(src="/public/js/app.js")